{% set buildResult = true %}

{% set stepk = 0 %}
{% set k = 0 %}
{% set testName = '' %}
{% set testName = app.result.path %}

{% for results in app.result %}

    {% set i = 0 %}
    {% set step = 0 %}
    {% for result in results %}
      <table class="table-bordered">
      {% for command in result  %}
        {% if command.0  != true %}
          {% set buildResult = false %}
          {% set step = i %}
          {% set k = i %}
          {% set stepk = i %}

          {% set style = '#fcc' %}
        {% else %}
          {% set style = '#bfb' %}
        {% endif %}
        <tr style="background-color: {{ style }} ">
          <td>{{ i+1 }}</td>
          <td>Command</td>
          <td>{{ command.2 }}</td>
          <td>{{ command.1 }}</td>
        </tr>

      {% endfor %}
      </table>
      {% set i=i + 1 %}
      {% set k = 0 %}
    {% endfor %}

{% endfor %}

    {% if buildResult == true %}
      <p>Build: Success</p>
    {%else%}
      <p>Build: Failed <br/>
      In Test <a href="http://{{ app.request.host }}{{ app.request.baseUrl }}/{{ testName }}">{{ testName }}</a>
    {% endif %}