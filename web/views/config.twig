{% include 'head.twig' %}
<div class="contentBox">
<div class="content">

  <form action=""
        method="POST">
    {% if app.browser is defined %}

      <h2>Browser Settings</h2>
      {% for browser  in app.browser %}
        {% if browser.url is defined and browser.url != '' %}
          {% set url = browser.url %}
          {% set lighten = '' %}
        {% else %}
          {% set url = '' %}
          {% set lighten = 'class=lighten' %}

        {% endif %}
        <span class="fa fa-link collored"></span>
        <input type="text"
               value="{{ url }}"
               placeholder="Baseurl"
               name="browser[{{ browser.browserName }}]{{ browser.browserName }}Url"/>

        {% if browser.active is defined and browser.active == true %}
          {% set checked = 'checked="checked"' %}
        {% else %}
          {% set checked = '' %}
        {% endif %}
        <input type="checkbox"
               value="{{ browser.browserName }}"
               name="active[]{{ browser.browserName }}"
                {{ checked }}
               id="{{ browser.browserName }}"/>

        <label class="checkbox"
               for="{{ browser.browserName }}">{{ browser.browserName }}</label>
<br/>

      {% endfor %}
    {% endif %}
    <br/>

    <h2>Pagetype</h2>
    {% if app.type is defined %}
      {% for type, key  in app.type %}
        {% if key == true %}
          {% set checked = 'checked="checked"' %}
        {% else %}
          {% set checked = '' %}
        {% endif %}
        <input type="radio"
               value="{{ type }}"
               name="type"
                {{ checked }}
               id="pagetype_{{ type }}"/>

        <label class="radio"
               for="pagetype_{{ type }}">{{ type }}</label>
      {% endfor %}
    {% endif %}
    <br/>

    <h2>Screenshot Settings </h2>
    {% if app.screenshots is defined %}
      {% for screen, key  in app.screenshots %}
        {% if key == true %}
          {% set checked = 'checked="checked"' %}
        {% else %}
          {% set checked = '' %}
        {% endif %}

        <input type="radio"
               value="{{ screen }}"
               name="screenshot"
                {{ checked }}
               id="screenshot_{{ screen }}"/>

        <label class="radio"
               for="screenshot_{{ screen }}">{{ screen }}</label>
      {% endfor %}
    {% endif %}

    <br/>
    <br/>
    <br/>

    <input type="submit"
           name="action"
           value="save"
           class="btn"/>

    <a href="{{ app.request.baseUrl }}/{{ app.request.path }}"
       class="backLink btn">Zur√ºck</a>

  </form>

  {% if app.request.message is defined %}
    <p>{{ app.request.message }}</p>
  {% endif %}
</div>
</div>


{% include 'footer.twig' %}

