{% include 'head.twig' %}
<div class="content">

  <form action=""
        method="POST">
    {% if app.browser is defined %}
      {% for browser  in app.browser %}
        <label>Baseurl for {{ browser.browserName }}</label>
        {% if browser.url is defined %}
          <input type="text"
                 value="{{ browser.url }}"
                 name="browser[{{ browser.browserName }}]{{ browser.browserName }}Url"/>
        {% else %}
          <input type=" text"
                 value=""
                 name="browser[{{ browser.browserName }}]{{ browser.browserName }}Url"/>
        {% endif %}
        <br/>
        {% if browser.active is defined and browser.active == true %}
          <input type="checkbox"
                 value="{{ browser.browserName }}"
                 name="active[]{{ browser.browserName }}"
                 checked="checked" id="{{ browser.browserName }}"/>
        {% else %}
          <input type="checkbox"
                 value="{{ browser.browserName }}"
                 name="active[]{{ browser.browserName }}" id="{{ browser.browserName }}"/>
        {% endif %}
        <label class="checkbox" for="{{ browser.browserName }}">{{ browser.browserName }}</label>

        <br/>
      {% endfor %}
    {% endif %}
    <br/>
    <h2>Pagetype</h2>
    {% if app.type is defined %}
      {% for type, key  in app.type %}
        {% if  key == true %}
          <input type="radio"
                 value="{{ type }}"
                 name="type"
                 checked="checked" id="pagetype_{{ type }}"/>
        {% else %}
          <input type="radio"
                 value="{{ type }}"
                 name="type" id="pagetype_{{ type }}"/>
        {% endif %}
        <label class="radio" for="pagetype_{{ type }}">{{ type }}</label>
      {% endfor %}
    {% endif %}
    <br/>

    <h2>Screenshot Settings </h2>
    {% if app.screenshots is defined %}
      {% for screen, key  in app.screenshots %}
        {% if  key == true %}
          <input type="radio"
                 value="{{ screen }}"
                 name="screenshot"
                 checked="checked" id="screenshot_{{ screen }}"/>
        {% else %}
          <input type="radio"
                 value="{{ screen }}"
                 name="screenshot" id="screenshot_{{ screen }}"/>
        {% endif %}
        <label class="radio" for="screenshot_{{ screen }}">{{ screen }}</label>
      {% endfor %}
    {% endif %}

    <br/>

    <input type="submit"
           name="action"
           value="save"
           class="btn"/>

    <a href="{{ app.request.baseUrl }}/{{ app.request.path }}"
       class="backLink btn">Zur√ºck</a>

  </form>

  {% if app.request.message is defined %}
    <p>{{ app.request.message }}</p>
  {% endif %}
</div>


{% include 'footer.twig' %}

