{% include 'head.twig' %}

<div class="content">

  <form action=""
        method="POST">

  <label>App Path</label>
  <br/>
  <input type="text"
         value="{{ app.request.settings.appPath }}"
         name="appPath"/>

  <br/>
  <br/>

    <label>Selenium Hub: </label>
  <br/>
  <input type="text"
         value="{{ app.request.settings.seleniumAddress }}"
         name="seleniumAddress"/>

  <br/>
  <br/>
  {% if app.request.settings.cache == true %}
    {% set checked = 'checked="checked"' %}
  {% else %}
    {% set checked = '' %}
  {% endif %}

  <input type="checkbox"
         value="cache"
         name="cache"
         {{ checked }}
         id="cache"/>

  <label class="checkbox"
         for="cache">Cache</label>

  <br/>
  <br/>
  <a href="{{ app.request.baseUrl }}"
     class="backLink btn">Zur√ºck</a>

  <input type="submit"
         name="action"
         value="save"
         class="btn"/>
  </form>
</div>


