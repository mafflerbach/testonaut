{% include 'head.twig' %}
<div class="editorBox" style="margin-top: -100px">
<b>{{ message }}</b>
<form action="{{ baseUrl }}/files/{{ path }}/"
      method="post" {{ form_enctype(form) }}>

  <input id="uploadFile"
         placeholder="Choose File"
         disabled="disabled"/>


  <div class="fileUpload btn btn-primary">
    {{ form_widget(form) }}
  </div>
  <input type="submit"
         name="Upload File"
         class="btn uploadbtn"/>
</form>
  <script type="text/javascript">
    $(document).ready(function () {
      function copyToClipboard(text) {
        window.prompt("Copy to clipboard: Ctrl+C, Enter", text);
      }

      $('span[data-copy="clipboard"]').click(function () {
        copyToClipboard($(this).data('url'));
      });
    })
  </script>


{% if app.request.image != '' %}
  <div class="linkSection">
    <span>Path to image</span>
    <span>http://{{ app.request.image }}</span>
      <span class="fa fa-copy"
            data-copy="clipboard"
            data-url="http://{{ app.request.image }}"></span>

  </div>
{% endif %}
</div>
