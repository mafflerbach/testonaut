{% include 'head.twig' %}
<b>{{ message }}</b>
<form action="{{ baseUrl }}/files/{{ path }}/"
      method="post" {{ form_enctype(form) }}>

  <input id="uploadFile"
         placeholder="Choose File"
         disabled="disabled"/>
  <br/><br/>

  <div class="fileUpload btn btn-primary">
    {{ form_widget(form) }}
  </div>
  <input type="submit"
         name="Upload File"
         class="btn uploadbtn"/>
</form>
<script type="text/javascript">
  document.getElementById("uploadBtn").onchange = function () {
    document.getElementById("uploadFile").value = this.value;
  };
</script>


{% if app.request.image != '' %}
  <div class="linkSection">
    <span>Path to image</span>
    <span>http://{{ app.request.image }}</span>
  </div>
{% endif %}

